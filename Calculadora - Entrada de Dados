op = int
while (op != 0):
    op = float(input("Digite a operação sendo \n1. Soma\n2. Subtração\n3. Multiplicação\n4. Divisão\n0. Sair\n"))
    if (op == 1):
        n1 = float(input("Digite o 1º numero a ser calculado\n"))
        n2 = float(input("Digite o 2º numero a ser calculado\n"))
        resultado = n1 + n2
        print(f"O resultado da operação é {resultado}\n")
    elif (op == 2):
        n1 = float(input("Digite o 1º numero a ser calculado\n"))
        n2 = float(input("Digite o 2º numero a ser calculado\n"))
        resultado = n1 - n2
        print(f"O resultado da operação é {resultado}\n")
    elif (op == 3):
        n1 = float(input("Digite o 1º numero a ser calculado\n"))
        n2 = float(input("Digite o 2º numero a ser calculado\n"))
        resultado = n1 * n2
        print(f"O resultado da operação é {resultado}\n")
    elif (op == 4):
        n1 = float(input("Digite o 1º numero a ser calculado\n"))
        n2 = float(input("Digite o 2º numero a ser calculado\n"))
        resultado = n1 / n2
        print(f"O resultado da operação é {resultado}\n")
    else:
        print("Essa opção não existe")
        continue
